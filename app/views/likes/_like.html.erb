<% unless event.available_slots == 0 || event.start_time < Time.zone.today %>
  <% if user_signed_in? && event.liked_by?(current_user) %>
    <%=link_to event_likes_path(event.id),  method: :delete, class: "event_likes text-decoration-none", remote: true do %>
      <i class="fa-solid fa-star"></i>
    <% end %>
    <%= event.likes.count %>
  <% else %>
    <%=link_to event_likes_path(event.id), method: :post, class: "event_likes text-decoration-none", remote: true do %>
      <i class="fa-regular fa-star"></i>
    <% end %>
    <%= event.likes.count %>
  <% end %>
<% end %>