<% content_for(:title, t('.title')) %>
<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1">
      <h1><%= t('プロフィール編集画面') %></h1>
      <%= form_with model: @user, url: profiles_path, local: true do |f| %>
        <%= render "shared/error_messages", model: f.object %>
          <div class="form-group">
            <%= f.label :名前 %>
            <%= f.text_field :name, class: "form-control mb-3" %>
          </div>
          <div class="form-group">
            <%= f.label :email %>
            <%= f.email_field :email, class: "form-control mb-3" %>
          </div>
          <div class="form-group">
            <%= f.label :パスワード %>
            <%= f.password_field :password, class: "form-control mb-3" %>
          </div>
          <div class="form-group">
            <%= f.label :パスワード（確認用） %>
            <%= f.password_field :encrypted_password, class: "form-control mb-3" %>
          </div>
          <div class="form-group">
            <%= f.label :avatar %>
            <%= f.file_field :avatar, class: "form-control", accept: 'image/*', onchange: 'previewImage(preview)' %>
            <%= f.hidden_field :avatar_cache %>
            <div class='mt-3 mb-3'>
              <%= image_tag @user.avatar.url, id: 'preview', size: '100x100', class: 'rounded-circle' %>
            </div>
          </div>
          <%= f.submit  class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>