<div class="container mt-3 mb-3">
  <div class="card shadow-sm">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="text-center login">
        <div class="form-signin shadow bg-white rounded">
          <%= render "devise/shared/error_messages", resource: resource %>

          <p class="h2 mt-3">ログイン</p>
          <hr class="border border-primary border-2 opacity-50">

          <form>
              <div class="form-floating mb-3">
                <%= f.email_field :email, autofocus: true, class:"form-control", placeholder:"メールアドレス", autocomplete: "email" %>
                <label for="mail">メールアドレス</label>
              </div>
              <div class="form-floating mb-3">
                <%= f.password_field :password, class:"form-control", placeholder:"パスワード", autocomplete: "current-password" %>
                <label for="passwd">パスワード</label>
              </div>

              <div class="checkbox mb-3">
                <% if devise_mapping.rememberable? %>
                  <div class="field">
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me %>
                  </div>
                <% end %>
              </div>
              <button class="w-100 btn btn-lg btn-success mb-3" type="submit"><i class="fas fa-sign-in-alt"></i> ログイン</button>
          </form>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    <% end %>
  </div>
</div>