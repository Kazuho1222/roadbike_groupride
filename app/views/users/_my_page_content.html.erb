<h1>マイページ</h1>
<% content_for(:title, t('.title')) %>
<div class="container pt-3">
  <div class="row">
    <div class="col-md-10 offset-md-1">
      <h1 class="float-left mb-5"><%= @user.name %></h1>
      <%= link_to t('defaults.edit'), edit_user_path, class: 'btn btn-success float-right' %>
      <table class="table">
        <tr>
          <th scope="row"><%= User.human_attribute_name(:name) %></th>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <th scope="row"><%= User.human_attribute_name(:email) %></th>
          <td><%= @user.email %></td>
        </tr>
        <tr>
          <th scope="row"><%= User.human_attribute_name(:avatar) %></th>
          <td><%= image_tag @user.avatar.url, class: 'rounded-circle', size: '50x50' %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="card text-center">
    <div class="card-header">
      <ul class="nav nav-tabs card-header-tabs" role="tablist">
        <li class="nav-item">
          <a class="nav-link" id="event-tab" data-bs-toggle="tab" data-bs-target="#event-tab-pane" role="tab" aria-controls="event-tab-pane" aria-selected="true">イベント投稿一覧</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" id="event-entry-tab" data-bs-toggle="tab" data-bs-target="#event-entry-tab-pane" role="tab" aria-controls="event-entry-tab-pane" aria-selected="false">イベントエントリー済み</a>
        </li>
        <li class="nav-item">
          <a class="nav-link disabled" role="tab" data-bs-toggle="tab">Disabled</a>
        </li>
      </ul>
    </div>
  </div>
  <!-- パネル部分 -->
  <div id="myTabContent" class="tab-content">
    <div class="tab-pane active" id="event-tab-pane" role="tabpanel" aria-labelledby="event-tab" tabindex="0">
      <div class="card-body">
        <div class="container">
          <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            <% if @events.present? %>
              <% @events_post.each do |event| %>
                <%= link_to "/events/#{event.id}", class:"text-decoration-none" do %>
                  <div class="col">
                    <div class="card shadow-sm">
                      <%= image_tag event.images[0], class: "event-img" %>
                      <% if event.available_slots == 0 || event.start_time < Time.zone.today %>
                        <div class='end-of-recruitment'>
                          <span>募集終了</span>
                        </div>
                      <% end %>
                      <div class="card-body">
                        <h5 class="card-title d-inline-block text-truncate" style="max-width: 100%;"><%= event.title %></h5><br>
                        <p class="card-text d-inline-block text-truncate" style="max-width: 100%;"><%= event.description %></p>
                        <div class="d-flex justify-content-between align-items-center">
                          <div class="btn-group">
                            <button type="button" class="btn btn-sm btn-outline-secondary">詳細</button>
                            <button type="button" class="btn btn-sm btn-outline-secondary">編集</button>
                          </div>
                          <small class="text-muted">残り　<%= event.available_slots %>人</small>
                        </div>
                      </div>
                    </div>
                  </div>
                <% end %>
              <% end %>
            <% else %>
              <div class="col">
                <div class="card shadow-sm">
                  <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="#55595c"/><text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text></svg>

