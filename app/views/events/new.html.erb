<p>新規イベント投稿画面</p>
<%= form_with model: @event, local: true  do |f| %>
  <%= render 'shared/error_messages', model: f.object %>

  <p>クリックしてファイルをアップロード</p>
  <%= f.file_field :images, multiple: true %><br>
  <p>タイトル</p>
  <%= f.text_area :title %><br>
  <p>説明</p>
  <%= f.text_area :description %><br>
  <p>カテゴリー</p>
  <%= f.collection_select(:category_id, Category.all, :id, :name, {}, {class:"select-box", id:"event-category"}) %>
  <p>募集人数</p>
  <%= f.text_area :capacity %>人<br>
  <p>集合場所</p>
  <%= f.text_area :meeting_place %><br>
  <p>帰着場所</p>
  <%= f.text_area :return_place %><br>
  <p>走行距離</p>
  <%= f.text_area :distance %>km<br>
  <p>獲得標高</p>
  <%= f.text_area :climbing %>m<br>
  <label class="control-label" for="">出発日時</label>
  <%= f.datetime_field :start_time, class: 'form-control' %><br>
  <label class="control-label" for="">解散日時</label>
  <%= f.datetime_field :end_time, class: 'form-control' %><br>
  <%= f.submit '投稿する' %>
<% end %>